        <Label Content="Sessions:" HorizontalAlignment="Left" Margin="234,26,0,0" VerticalAlignment="Top" FontSize="14"/>
        <ComboBox HorizontalAlignment="Left" Margin="304,26,0,0" VerticalAlignment="Top" Width="120" FontSize="14" x:Name="SessionComboBox"/>
        <Button Content="Laad Sessie" HorizontalAlignment="Left" Margin="234,60,0,0" VerticalAlignment="Top" Width="190" x:Name="LoadSessionButton" FontSize="14" Click="LoadSessionButton_Click_1"/>
        <Button Content="Vernieuw alle sessie's" HorizontalAlignment="Left" Margin="35,60,0,0" VerticalAlignment="Top" Width="185" Height="23" FontSize="14" x:Name="ReloadSessionsButton" Click="ReloadSessionsButton_Click"/>

    </Grid>
</Window>
